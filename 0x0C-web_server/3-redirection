#!/usr/bin/env bash
# A Script that configures a new Ubuntu machine to Perform a 301-redirection

sudo apt-get -y update
sudo apt-get install -y nginx

# Creating an index.html page
echo "Hello World!" | sudo tee /var/www/html/index.html

# Using sed to do a 301 Redirection
Updated_Rule="server_name _;\\n\\trewrite ^/redirect_me https://github.com/benzoic09 permanent;"
sudo sed -i "s#server_name _;#$Updated_Rule#" /etc/nginx/sites-enabled/default

# Restarting Nginx service
sudo service nginx restart
